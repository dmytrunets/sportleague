{% extends "AppBundle::layout.html.twig" %}

{% block content %}
    <div class="container">
        <h2>My account</h2>

        <h4>My teams</h4>
        <table class="table">
            {% for team in teams %}
                <tr>
                    <td><a href="{{ url('team_view', {'team_id': team.id }) }}">{{ team.name }}</a></td>
                    <td></td>
                </tr>
            {% endfor %}
        </table>

        <input type="button" value="Create team">

        <h4>My games</h4>
        <table class="table">
            {% for game in games %}
                {{ include("AppBundle:Web:game_row.html.twig", { 'game': game }) }}
            {% endfor %}
        </table>
    </div>
{% endblock %}
